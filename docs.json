{
	"$schema": "https://mintlify.com/docs.json",
	"name": "Rewrite",
	"theme": "mint",
	"appearance": {
		"default": "dark",
		"strict": true
	},
	"errors": {
		"404": {
			"redirect": false,
			"title": "Rewrite - Not Found",
			"description": "Hey, where did the page go?"
		}
	},
	"colors": {
		"primary": "#9A9A9A",
		"light": "#9A9A9A",
		"dark": "#9A9A9A"
	},
	"fonts": {
		"heading": {
			"family": "Inter"
		},
		"body": {
			"family": "Lato"
		}
	},
	"favicon": "/favicon.svg",
	"logo": {
		"light": "/images/icon.png",
		"dark": "/images/icon.png"
	},
	"navbar": {
		"links": [
			{ "label": "Dashboard", "href": "https://dashboard.rewritetoday.com" },
			{
				"label": "GitHub",
				"icon": {
					"name": "github"
				},
				"href": "https://github.com/rewritetoday"
			}
		]
	},
	"footer": {
		"socials": {
			"x": "https://x.com/rewritetoday",
			"github": "https://github.com/rewritetoday",
			"discord": "https://discord.gg/rewrite"
		}
	},
	"api": {
		"mdx": {
			"server": "https://api.rewritetoday.com/v1",
			"auth": {
				"method": "bearer",
				"name": "Bearer"
			}
		}
	},
	"styling": {
		"codeblocks": {
			"theme": "vesper"
		}
	},
	"navigation": {
		"languages": [
			{
				"language": "en",
				"default": true,
				"tabs": [
						{
							"tab": "Welcome",
							"pages": ["en/welcome", "en/quickstart"]
						},
					{
						"tab": "API",
						"groups": [
							{
								"group": "Reference",
								"pages": ["en/api/introduction", "en/api/pagination"]
							},
							{
								"group": "SMS",
								"openapi": "en/api/openapi.json"
							}
						]
					},
						{
							"tab": "CLI",
							"pages": ["en/cli/introduction", "en/cli/auth", "en/cli/config"]
						},
					{
						"tab": "SDKs",
						"groups": [
							{
								"group": "Overview",
								"pages": ["en/sdks/introduction"]
							},
							{
								"group": "Node.js",
								"icon": "node-js",
								"pages": ["en/sdks/node"]
							},
							{
								"group": "Go",
								"icon": "golang",
								"pages": ["en/sdks/golang"]
							},
							{
								"group": "Python",
								"icon": "python",
								"pages": ["en/sdks/python"]
							}
						]
					},
					{
						"tab": "Webhooks",
						"pages": [
							"en/webhooks/introduction",
							"en/webhooks/retry",
							"en/webhooks/types"
						]
					}
				]
			},
				{
					"language": "pt-BR",
					"tabs": [
						{
							"tab": "Bem-vindo",
							"pages": ["pt-br/welcome", "pt-br/quickstart"]
						},
						{
							"tab": "API",
							"groups": [
								{
									"group": "Referencia",
									"pages": ["pt-br/api/introduction", "pt-br/api/pagination"]
								},
								{
									"group": "SMS",
									"openapi": "en/api/openapi.json"
								}
							]
						},
						{
							"tab": "CLI",
							"pages": ["pt-br/cli/introduction", "pt-br/cli/auth", "pt-br/cli/config"]
						},
						{
							"tab": "SDKs",
							"groups": [
								{
									"group": "Visao geral",
									"pages": ["pt-br/sdks/introduction"]
								},
								{
									"group": "Node.js",
									"icon": "node-js",
									"pages": ["pt-br/sdks/node"]
								},
								{
									"group": "Go",
									"icon": "golang",
									"pages": ["pt-br/sdks/golang"]
								},
								{
									"group": "Python",
									"icon": "python",
									"pages": ["pt-br/sdks/python"]
								}
							]
						},
						{
							"tab": "Webhooks",
							"pages": [
								"pt-br/webhooks/introduction",
								"pt-br/webhooks/retry",
								"pt-br/webhooks/types"
							]
						}
					]
				}
		]
	}
}
