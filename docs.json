{
	"$schema": "https://mintlify.com/docs.json",
	"name": "Rewrite",
	"theme": "mint",
	"appearance": {
		"default": "dark",
		"strict": true
	},
	"errors": {
		"404": {
			"redirect": false,
			"title": "Rewrite - Not Found",
			"description": "Hey, where did the page go?"
		}
	},
	"colors": {
		"primary": "#9EEA6C",
		"light": "#9EEA6C",
		"dark": "#9EEA6C"
	},
	"fonts": {
		"heading": {
			"family": "Inter"
		},
		"body": {
			"family": "Lato"
		}
	},
	"favicon": "/favicon.svg",
	"logo": {
		"light": "/images/icon.png",
		"dark": "/images/icon.png"
	},
	"navbar": {
		"links": [
			{ "label": "Status", "href": "https://status.rewritetoday.com" },
			{ "label": "Changelog", "href": "https://rewritetoday.com/changelog" },
			{
				"label": "GitHub",
				"icon": {
					"name": "github"
				},
				"href": "https://github.com/rewritestudios"
			}
		]
	},
	"footer": {
		"socials": {
			"x": "https://x.com/rewritetoday",
			"github": "https://github.com/rewritestudios",
			"discord": "https://discord.gg/rewrite"
		}
	},
	"api": {
		"mdx": {
			"server": "https://api.rewritetoday.com/v1",
			"auth": {
				"method": "bearer",
				"name": "Bearer"
			}
		}
	},
	"styling": {
		"codeblocks": {
			"theme": "vesper"
		}
	},
	"navigation": {
		"languages": [
			{
				"language": "en",
				"default": true,
				"tabs": [
					{
						"tab": "Welcome",
						"pages": ["en/start/welcome"]
					},
					{
						"tab": "API",
						"groups": [
							{
								"group": "Reference",
								"pages": ["en/api/introduction", "en/api/pagination"]
							},
							{
								"group": "SMS",
								"openapi": "en/api/openapi.json"
							}
						]
					},
					{
						"tab": "CLI",
						"pages": ["en/cli/introduction", "en/cli/config"]
					},
					{
						"tab": "SDKs",
						"groups": [
							{
								"group": "Overview",
								"pages": ["en/sdks/introduction"]
							},
							{
								"group": "Node.js",
								"icon": "node-js",
								"pages": ["en/sdks/node/introduction", "en/sdks/node/elysia"]
							},
							{
								"group": "Go",
								"icon": "golang",
								"pages": ["en/sdks/golang"]
							},
							{
								"group": "Python",
								"icon": "python",
								"pages": ["en/sdks/python"]
							}
						]
					},
					{
						"tab": "Webhooks",
						"pages": ["en/webhooks/introduction"]
					}
				]
			},
			{
				"language": "pt-BR",
				"tabs": [
					{
						"tab": "Bem-vindo",
						"pages": ["pt-br/start/welcome"]
					},
					{
						"tab": "SDKs",
						"pages": ["pt-br/sdks/introduction"]
					}
				]
			}
		]
	}
}
