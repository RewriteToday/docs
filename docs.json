{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Remessage",
  "theme": "mint",
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "errors": {
    "404": {
      "redirect": false,
      "title": "Remessage - Not Found",
      "description": "Hey, where did the page go?"
    }
  },
  "colors": {
    "primary": "#9EEA6C",
    "light": "#9EEA6C",
    "dark": "#9EEA6C"
  },
  "fonts": {
    "heading": {
      "family": "Inter"
    },
    "body": {
      "family": "Lato"
    }
  },
  "favicon": "/favicon.ico",
  "logo": {
    "light": "/images/hero-light.png",
    "dark": "/images/hero-dark.png"
  },
  "navbar": {
    "links": [
      { "label": "Status", "href": "https://status.remessage.io" },
      { "label": "Changelog", "href": "https://remessage.io/changelog" },
      { "label": "Repository", "href": "https://github.com/remessage/docs" }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/remessages",
      "github": "https://github.com/remessage"
    }
  },
  "api": {
    "mdx": {
      "server": "https://api.remessages.com/v1",
      "auth": {
        "method": "bearer",
        "name": "Bearer"
      }
    }
  },
  "navigation": {
    "languages": [
      {
        "language": "pt-BR",
        "tabs": [
          {
            "tab": "Bem-vindo",
            "pages": [
              "pt-br/start/welcome"
            ]
          },
          {
            "tab": "SDKs",
            "pages": [
              "pt-br/sdks/introduction"
            ]
          }
        ]
      },
      {
        "language": "en",
        "default": true,
        "tabs": [
          {
            "tab": "Welcome",
            "pages": [
              "en/start/welcome"
            ]
          },
          {
            "tab": "SDKs",
            "pages": [
              "en/sdks/introduction"
            ]
          }
        ]
      }
    ]
  }
}
